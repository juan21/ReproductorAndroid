<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.reproduct4.ItemActivity" >

    <FrameLayout
        android:id="@+id/frameLayout1"
        android:layout_width="18dp"
        android:layout_height="506dp" >
    </FrameLayout>

    <TextView
        android:id="@+id/textView_inferior"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/frameLayout1"
        android:layout_below="@+id/imageView_imagen"
        android:layout_weight="9.21"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Button
        android:id="@+id/badelante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/batras"
        android:layout_alignBottom="@+id/batras"
        android:layout_alignLeft="@+id/bDetener"
        android:minWidth="103dip"
        android:onClick="badelante"
        android:text=">>" />

    <Button
        android:id="@+id/batras"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bReproducir"
        android:layout_below="@+id/bReproducir"
        android:layout_marginTop="30dp"
        android:minWidth="103dip"
        android:onClick="batras"
        android:text="&lt;&lt;" />

    <TextView
        android:id="@+id/textView_superior"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView_inferior"
        android:layout_alignParentRight="true"
        android:layout_weight="6.56"
        android:gravity="center"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ImageView
        android:id="@+id/imageView_imagen"
        android:layout_width="132dp"
        android:layout_height="198dp"
        android:layout_alignTop="@+id/frameLayout1"
        android:layout_centerHorizontal="true"
        android:layout_weight="17.52"
        android:adjustViewBounds="true"
        android:contentDescription="DescripciÃƒÆ’Ã‚Â³n del contenido de la imagen"
        android:scaleType="fitXY"
        android:src="@android:drawable/ic_menu_gallery" />

    <Button
        android:id="@+id/bDetener"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/bReproducir"
        android:layout_alignBottom="@+id/bReproducir"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/bReproducir"
        android:minWidth="103dip"
        android:onClick="bDetener"
        android:text="Detener" />

    <Button
        android:id="@+id/bReproducir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_inferior"
        android:layout_marginTop="23dp"
        android:layout_toRightOf="@+id/frameLayout1"
        android:minWidth="103dip"
        android:onClick="bReproducir"
        android:text="Pause" />

</RelativeLayout>